@model IEnumerable<Model.Course>

@{
    ViewData["Title"] = "Courses";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-2">
            <h2 class="text-primary">Courses List</h2>
        </div>
        <div class="col-2">
            <a asp-controller="Courses" asp-action="Create" class="btn btn-primary">Add new</a>
        </div>
    </div>

    <hr />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Course Name
                    </th>
                    <th>
                        Course Description
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="35%"><a class="nav-link" asp-area="" asp-controller="Groups" asp-action="Index" asp-route-courseId="@item.CourseId">@item.Name</a></td>
                        <td width="35%">@Html.DisplayFor(modelItem => item.Description)</td>
                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Courses" asp-action="Edit" asp-route-id="@item.CourseId" class="btn btn-primary mx-1 w-50">Edit</a>
                                <a asp-controller="Courses" asp-action="Delete" asp-route-id="@item.CourseId" class="btn btn-danger  mx-1 w-50">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Courses added yet</p>
    }

</div>
