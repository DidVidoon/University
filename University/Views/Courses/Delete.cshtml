@model Model.Course

@{
    ViewData["Title"] = "Delete";
}

<div class="border p-3">
    <div class="form-group row">
        <h3>You want to delete this course?</h3>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    <br />

    <h5 style="color: red;">@ViewData["WarningMessage"]</h5>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CourseId" />
        <input type="submit" value="Delete" class="btn btn-danger w-25" />
        <a asp-controller="Courses" asp-action="Index" class="btn btn-primary mx-1 w-25">Cancel</a>
    </form>
</div>
