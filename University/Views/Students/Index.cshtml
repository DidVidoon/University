@model IEnumerable<Model.Student>

@{
    ViewData["Title"] = "Students";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-2">
            <h2 class="text-primary">Students List</h2>
        </div>
        <div class="col-2">
            <a asp-controller="Students" asp-action="Create" class="btn btn-primary">Add new</a>
        </div>
    </div>

    <hr />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Group Name
                    </th>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="26%"><a class="nav-link" asp-area="" asp-controller="Students" asp-action="Index" asp-route-groupId="@item.GroupId">@item.Group.Name</a></td>
                        <td width="26%">@Html.DisplayFor(modelItem => item.First_Name)</td>
                        <td width="26%">@Html.DisplayFor(modelItem => item.Last_Name)</td>
                        <td width="22%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Students" asp-action="Edit" asp-route-Id="@item.StudentId" class="btn btn-primary mx-1 w-50">Edit</a>
                                <a asp-controller="Students" asp-action="Delete" asp-route-Id="@item.StudentId" class="btn btn-danger  mx-1 w-50">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No expense added yet</p>
    }

</div>